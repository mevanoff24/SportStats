<h1>Find Your Team</h1>

<% @teams.each do |team| %>
<div class="table-responsive">
	<table class="table">
		<tbody>
			<tr>
				<td><%= image_tag team.image %></td>
			</tr>
			<tr>
				<td><%= team.name %></td>
			</tr>
			<tr>
				<td><%= team.city %></td>
			</tr>
			<tr>
				<td><%= team.stadium %></td>
			</tr>
		</tbody>
	</table>
</div>

<% end %>