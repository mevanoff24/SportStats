<h1>Create Your Fantasy Team</h1>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for ([@user, @fantasy_team]) do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
		</div>
	</br>
      <%= f.fields_for :players do |builder| %>

	     <div class="fields"> 
	     	<%= builder.label :name, "Player Name" %>
	      <%= builder.text_field :name, rows: 3 %>

	      <%= builder.check_box :_destroy %>
	      <%= builder.label :_destroy, class: "remove_player" %>
	    </div>
	  </br>
      <% end %>
	      <%= f.submit "Create Team"%>
    <% end %>
  </div>
</div>
