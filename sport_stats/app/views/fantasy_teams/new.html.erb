<h1>Create Your Fantasy Team</h1>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for ([@user, @fantasy_team]) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :player %>
      <%= f.text_field :player %>

      <%= link_to_add_fields "Add Player", f, :players %>

      <%= f.hidden_field :_destroy %>
      <%= link_to "[remove]", "#", class: "remove_player" %>

      <%= f.submit "Create Team", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
