<%= form_for ([@user, @fantasy_team]) do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
	    <%= link_to_add_fields "Add Player", f, :players %>
		</div>
	</br>
      <%= f.fields_for :players do |builder| %>

	    <%= render "player_fields", :f => builder %>
	  </br>
      <% end %>
	      <%= f.submit "Create Team"%>
    <% end %>